# use lld by default
sys-devel/llvm -gold

# use all defaults but libcxx
sys-devel/clang default-compiler-rt default-lld llvm-libunwind
sys-libs/compiler-rt clang

# disable sanitizers for now
sys-devel/clang-runtime compiler-rt -sanitize
# sys-libs/compiler-rt-sanitizers clang

# libgcrypt doesn't like optimizations
dev-libs/libgcrypt o-flag-munging
